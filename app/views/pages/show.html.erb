<h1>
  <%= @page.title %></h1>
  -
  Public: <%= @page.public ? 'Yes' : 'No' %>

<hr>

<cite>
  Author: <%= @page.author %>
</cite>

<blockquote>
  <%= @page.content %>
</blockquote>

<i>
  Created At: <%= @page.created_at %>
</i>
<br>
<i>
  Updated At: <%= @page.updated_at %>
</i>

<div class="action-buttons">
  <%= link_to 'All Posts', pages_path, class: "btn btn-info"%>
  <%= link_to 'Edit', edit_page_path(@page), class: "btn btn-warning"%>
  <%= link_to 'Delete', page_path(@page), class: "btn btn-danger",
      method: :delete, data: {confirm: 'Are you sure?'}%>

</div>
